<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Full Text" />

    <com.multipleline.ellipsize.EllipsizingTextView
        android:id="@+id/textViewFull"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="all" />

    <TextView
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ellipsize None" />

    <com.multipleline.ellipsize.EllipsizingTextView
        android:id="@+id/textViewNone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:ellipsize="none"
        android:maxLines="3" />

    <TextView
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ellipsize Start" />

    <com.multipleline.ellipsize.EllipsizingTextView
        android:id="@+id/textViewStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:ellipsize="start"
        android:maxLines="3" />

    <TextView
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ellipsize Middle (TODO)" />

    <com.multipleline.ellipsize.EllipsizingTextView
        android:id="@+id/textViewMiddle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:ellipsize="middle"
        android:maxLines="3" />

    <TextView
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ellipsize End" />

    <com.multipleline.ellipsize.EllipsizingTextView
        android:id="@+id/textViewEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:ellipsize="end"
        android:maxLines="3" />

</LinearLayout>